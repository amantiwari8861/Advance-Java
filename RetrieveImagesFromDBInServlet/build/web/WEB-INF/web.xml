<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>imageFilter</filter-name>
        <filter-class>addEmployee</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>imageFilter</filter-name>
        <servlet-name>addEmployee</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>addEmployee</servlet-name>
        <servlet-class>addEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>retriveImage</servlet-name>
        <servlet-class>retriveImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayData</servlet-name>
        <servlet-class>DisplayData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>retriveImage</servlet-name>
        <url-pattern>/retriveImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayData</servlet-name>
        <url-pattern>/DisplayData</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
